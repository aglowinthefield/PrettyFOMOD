<UserControl x:Class="Glow.PrettyFOMOD.GUI.Views.FolderSelectView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:Glow.PrettyFOMOD.GUI.ViewModels"
    x:DataType="vm:FolderSelectViewModel"
    mc:Ignorable="d"
    d:DesignWidth="500"
    d:DesignHeight="250"
>
    <Design.DataContext>
        <vm:FolderSelectViewModel />
    </Design.DataContext>
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock Text="{Binding Greeting}" HorizontalAlignment="Center" />
        <TextBlock Text="Dummy" HorizontalAlignment="Center"></TextBlock>
        <Button Name="FolderSelectButton" HorizontalAlignment="Center" Margin="0, 20">Select Mod Folder</Button>
        <TextBlock Text="{Binding SelectedFolder}"></TextBlock>
    </StackPanel>
</UserControl>
