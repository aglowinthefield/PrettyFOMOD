<UserControl x:Class="Glow.PrettyFOMOD.GUI.Views.FolderSelectView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:Glow.PrettyFOMOD.GUI.ViewModels"
    x:DataType="vm:FolderSelectViewModel"
    mc:Ignorable="d"
    d:DesignWidth="600"
    d:DesignHeight="250"
>
    <Design.DataContext>
        <vm:FolderSelectViewModel />
    </Design.DataContext>
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock FontSize="18" Text="{Binding Greeting}" HorizontalAlignment="Center" />
        <Button Click="Button_OnClick" HorizontalAlignment="Center" Margin="0, 20, 0, 0">Select Mod Folder</Button>
        <TextBlock Text="{Binding SelectedFolder}" />
    </StackPanel>
</UserControl>
